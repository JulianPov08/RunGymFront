@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RunGym - Metas y Objetivos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #ffffff;
            color: #ffffff;
        }

        header {
            text-align: center;
            padding: 20px;
            background-color: #4b0082;
        }

        h1 {
            color: #ffffff;
            font-size: 3rem;
            margin-bottom: 10px;
        }

        h2 {
            color: #ccccff;
            font-size: 1.5rem;
        }

        .form-section {
            max-width: 800px;
            margin: 30px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-size: 1.2rem;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            border: 2px solid #4b0082;
            border-radius: 5px;
            background-color: #ffffff;
            color: #fff;
            font-size: 1rem;
        }

        textarea {
            resize: none;
            height: 100px;
        }

        button {
            display: block;
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            color: #fff;
            background-color: #4b0082;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #6a0dad;
            }

    </style>
</head>
<body style="background-image: url('../../images/Login/Fondo.jpg'); background-size: cover; background-position: center;">
</body>
<div class="container text-center">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <img src="~/images/Login/logo.jpg" alt="RunGym Logo" class="mb-3" style="width: 150px; height: auto;">            <h1>RunGym</h1>
            <h2>Metas y Objetivos</h2>
            <form action="inicio1.html">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre:</label>
                    <input type="text" class="form-control" id="nombre" placeholder="Nombre Completo" required>
                </div>
                <div class="mb-3">
                    <label for="genero" class="form-label">Género:</label>
                    <select class="form-select" id="genero" required>
                        <option value="masculino">Masculino</option>
                        <option value="femenino">Femenino</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="meta" class="form-label">Meta Principal:</label>
                    <select class="form-select" id="meta" required>
                        <option value="">Perder peso</option>
                        <option value="">Ganar peso</option>
                    </select>
                </div>
            </form>
        </div>
    </div>
    <a href="inicio metas.html" class="btn btn-primary">Siguiente</a>
</div>
</body>
</html>
