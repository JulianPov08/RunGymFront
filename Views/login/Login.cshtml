@model RunGymFront.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RunGym - Iniciar sesión</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

            .login-container {
                padding: 2px;
                border-radius: 5px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                width: 100%;
                max-width: 400px;
                text-align: center;
            }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 1rem;
            border: 1px solid #ddd;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

            .input-group .form-control {
                border-left: none;
            }

        h3, .form-label {
            color: #ffffff;
        }

        .icon-small i {
            font-size: 15px;
            width: 8px;
            height: 40px;
            padding: 1px;
        }

        /* Bottones */

            .btn-primary {
                background-color: #2a5298;
                border: none;
                padding: 10px;
                border-radius: 5px;
                width: 100%;
                font-size: 16px;
            }

        .btn-primary:hover {
            background-color: #c323c8;
        }

    </style>
</head>
<body style="background-image: url('../../images/Login/Fondo.jpg'); background-size: cover; background-position: center;">
    <div class="login-container">
        <img src="~/images/Login/logo.jpg" alt="RunGym Logo" class="mb-3" style="width: 150px; height: auto;">
        <h3 class="mb-4">Iniciar sesión</h3>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
         {
            @Html.AntiForgeryToken()
            <div class="mb-3 text-start">
                @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                <div class="input-group">
                    <span class="input-group-text icon-small"><i class="fas fa-user"></i></span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "correo@ejemplo.com" })
                </div>
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3 text-start">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                <div class="input-group">
                    <span class="input-group-text icon-small"><i class="fas fa-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <a href="iniciar sesion.html" type="button" class="btn btn-primary btn-block" onclick="registrarUsuario()">Iniciar Sesion</a>
         }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
